<!--suppress XmlUnboundNsPrefix, XmlUnboundNsPrefix -->
<configuration debug="false" scan="true" scanPeriod="30 seconds">

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date %highlight(%5level) [%thread] %cyan([%file:%line]) %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>tracedemo.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>tracedemo.%d.zip</fileNamePattern>
            <maxHistory>5</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>[%date] [%level] %msg [%logger{100}] [%thread] %n</pattern>
        </encoder>
    </appender>

    <logger name="com.zjrealtech.tracedemo.mapper" level="DEBUG" additivity="true">
        <appender-ref ref="CONSOLE"/>
    </logger>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

</configuration>